<div class="container">
  <h1>Projects Page</h1>
  <% if @projects.any? %>
    <h3>Project List</h3>
    <ul>
      <% @projects.each() do |project| %>
      <a href="projects/<%= project.id()%>"><li><%= project.name() %></li></a>
      <% end %>
    </ul>
  <% else %>
    <h3>You do not have any projects yet.</h3>
  <% end %>
  <button id="add" type="button" class="btn btn-primary" name="button">Add a project</button>

  <form class="add" action="/projects" method="post">
    <div class="form-group">
      <label for="name">Project name</label>
      <input type="text" name="name" value="" required>
    </div>
    <button type="submit" class="btn btn-success" name="button">Submit</button>
  </form>

  <a href="/"><button type="button" class="btn btn-info" name="button">Go Home</button></a>

</div>
